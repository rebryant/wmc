CC=gcc
CXX=g++
OPT = -O2
#OPT = -O0
DFLAGS = -DEDEBUG
CFLAGS=-g $(OPT) -Wno-nullability-completeness $(DFLAGS)
CXXFLAGS=-std=c++11
INC = -I.. -I../util
LDIR = ../../lib
IDIR = ../../include
LOCAL=/opt/homebrew

LFILE = wmc_arithmetic_arm.a

OFILES = q25.o analysis.o er_double.o
IFILES = q25.h analysis.h er_double.h erd-header.h erd.h

# ARM specific things
LOCAL=/opt/homebrew

ACFLAGS=$(CFLAGS) -I $(LOCAL)/include

all: $(LFILE) $(IFILES) 
	cp -p $(LFILE) $(LDIR)
	cp -p $(IFILES) $(IDIR)

$(LFILE): $(OFILES)
	ar cr $(LFILE) $(OFILES)

er_test: er_double.c
	$(CC) $(ACFLAGS) -DEDEBUG -o er_test er_double.c $(LOCAL)/lib/libgmp.a

erd_eval: erd_eval.c erd-header.h erd.h
	$(CC) $(ACFLAGS) $(INC)  -o erd_eval erd_eval.c $(LDIR)/wmc_util.a $(LOCAL)/lib/libgmp.a

.c.o:
	$(CC) $(ACFLAGS) $(INC) -c $<

.cxx.o:
	$(CXX) $(CFLAGS) $(INC) -c $<


clean:
	 rm -f *.a *.o *~
