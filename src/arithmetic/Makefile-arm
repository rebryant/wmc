CC=gcc
CXX=g++
OPT = -O2
#OPT = -O0
DFLAGS = -DEDEBUG
CFLAGS=-g $(OPT) -Wno-nullability-completeness $(DFLAGS)
CXXFLAGS=-std=c++11
LDIR = ../../lib
IDIR = ../../include
LOCAL=/opt/homebrew
INC = -I.. -I$(IDIR) -I$(LOCAL)/include

LFILE = wmc_arithmetic_arm.a

OFILES = q25.o analysis.o
IFILES = q25.h analysis.h Erd.hh

# ARM specific things
LOCAL=/opt/homebrew

ACFLAGS=$(CFLAGS) -I $(LOCAL)/include

all: $(LFILE) $(IFILES) 
	cp -p $(LFILE) $(LDIR)
	cp -p $(IFILES) $(IDIR)

$(LFILE): $(OFILES)
	ar cr $(LFILE) $(OFILES)

erd_eval: erd_eval.c erd-header.h erd.h
	$(CC) $(ACFLAGS) $(INC)  -o erd_eval erd_eval.c $(LDIR)/wmc_util.a $(LOCAL)/lib/libgmp.a

Erd_eval: Erd_eval.cpp Erd.hh 
	$(CXX) $(CFLAGS) $(CXXFLAGS) $(INC) -o Erd_eval Erd_eval.cpp $(LDIR)/wmc_util.a $(LOCAL)/lib/libgmp.a

.c.o:
	$(CC) $(ACFLAGS) $(INC) -c $<

.cxx.o:
	$(CXX) $(CFLAGS) $(INC) -c $<


clean:
	 rm -f *.a *.o *~
